<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartShoppingXamarin.View.AddProduct.ProductExpirationDate"
             BindingContext="{Binding Source={RelativeSource Self}, Path=ViewModel}">
    <ContentPage.Content>
        <StackLayout>

            <DatePicker MinimumDate="{Binding DatePickerMinDate}"
                        MaximumDate="{Binding DatePickerMaxDate}"
                        Date="{Binding ProductExpirationDate}" />
            <Button Command="{Binding Path=AddProductCommand}" Text="Dodaj produkt" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>