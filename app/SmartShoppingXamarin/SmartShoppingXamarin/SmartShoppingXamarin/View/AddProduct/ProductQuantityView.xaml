<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartShoppingXamarin.View.AddProduct.ProductQuantityView"
             BindingContext="{Binding Source={RelativeSource Self}, Path=ViewModel}">
    <ContentPage.Content>
        <StackLayout>
            <Label>Ilość</Label>
            <Entry Text="{Binding ProductQuantity}" Keyboard="Numeric">
            </Entry>
            <Label>Gramatura</Label>
            <Entry Text="{Binding ProductVolume}" Keyboard="Numeric">
            </Entry>
            <Picker>
                <Picker.SelectedIndex>0</Picker.SelectedIndex>
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>gram</x:String>
                        <x:String>litr</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Button Command="{Binding Path=ConfirmQuantityCommand}" Text="Dalej" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>